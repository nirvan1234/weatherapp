     <script>

         
         const getCurrentDay = () => {

             let weekday = new Array(7);
             weekday[0] = "sunday";
             weekday[1] = "monday";
             weekday[2] = "tueday";
             weekday[3] = "wednesday";
             weekday[4] = "thurday";
             weekday[5] = "friday";
             weekday[6] = "saturday";

             let currentTime = new Date();
             days = weekday[currentTime.getDay()];
             let day = document.getElementById('day');

             day.innerText = days;

         }
